<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
              http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping>
        <class-a>com.scnsoft.eldermark.entity.Organization</class-a>
        <class-b>com.scnsoft.scansol.shared.ScanSolOrganizationDto</class-b>
        <field>
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>name</a>
            <b>name</b>
        </field>
        <field>
            <a>moduleHie</a>
            <b>moduleHie</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.scnsoft.eldermark.entity.Database</class-a>
        <class-b>com.scnsoft.scansol.shared.ScanSolDatabaseDto</class-b>
        <field>
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>name</a>
            <b>name</b>
        </field>
        <field>
            <a>systemSetup.loginCompanyId</a>
            <b>companyCode</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.scnsoft.eldermark.entity.Resident</class-a>
        <class-b>com.scnsoft.scansol.shared.ScanSolResidentDto</class-b>
        <field>
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>birthDate</a>
            <b>birthDate</b>
        </field>
        <field>
            <a>firstName</a>
            <b>firstName</b>
        </field>
        <field>
            <a>lastName</a>
            <b>lastName</b>
        </field>
        <field>
            <a>middleName</a>
            <b>middleName</b>
        </field>
        <field>
            <a>socialSecurity</a>
            <b>ssn</b>
        </field>
        <field>
            <a>preferredName</a>
            <b>preferredName</b>
        </field>
        <field>
            <a>inactive</a>
            <b>inactive</b>
        </field>
    </mapping>

    <mapping>
        <class-a>com.scnsoft.eldermark.entity.Document</class-a>
        <class-b>com.scnsoft.scansol.shared.ScanSolDocumentDto</class-b>
        <field>
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>size</a>
            <b>length</b>
        </field>
        <field>
            <a>documentTitle</a>
            <b>title</b>
        </field>
        <field>
            <a>mimeType</a>
            <b>mimeType</b>
        </field>
        <field>
            <a>originalFileName</a>
            <b>originalName</b>
        </field>
        <field custom-converter="com.scnsoft.scansol.shared.converters.CustomDateConverter">
            <a>creationTime</a>
            <b >creationTime</b>
        </field>
    </mapping>

    <mapping wildcard="false">
        <class-a>com.scnsoft.eldermark.entity.Employee</class-a>
        <class-b>com.scnsoft.scansol.shared.ScanSolBaseEmployeeInfoDto</class-b>
        <field>
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>firstName</a>
            <b>firstName</b>
        </field>
        <field>
            <a>lastName</a>
            <b>lastName</b>
        </field>
        <field>
            <a>loginName</a>
            <b>login</b>
        </field>
        <field>
            <a>status</a>
            <b>inactive</b>
        </field>
    </mapping>
    <mapping map-id="employee-id-and-name-only" wildcard="false">
        <class-a>com.scnsoft.eldermark.entity.Employee</class-a>
        <class-b>com.scnsoft.scansol.shared.ScanSolBaseEmployeeInfoDto</class-b>
        <field>
            <a>id</a>
            <b>id</b>
        </field>
        <field>
            <a>fullName</a>
            <b>name</b>
        </field>
    </mapping>
</mappings>