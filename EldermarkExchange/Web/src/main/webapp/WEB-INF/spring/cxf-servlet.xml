<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <security:global-method-security pre-post-annotations="enabled"/>

    <bean id="residentsWebService" class="com.scnsoft.eldermark.ws.server.ResidentsEndpointImpl"/>
    <bean id="documentsWebService" class="com.scnsoft.eldermark.ws.server.DocumentsEndpointImpl"/>
    <bean id="documentsDownloadWebService" class="com.scnsoft.eldermark.ws.server.DocumentsDownloadEndpointImpl"/>
    <bean id="documentsUploadWebService" class="com.scnsoft.eldermark.ws.server.DocumentsUploadEndpointImpl"/>

    <bean id="usernameTokenValidator" class="com.scnsoft.eldermark.ws.server.security.UsernameTokenPasswordValidator">
        <property name="authenticationManager" ref="authenticationManager"/>
    </bean>

    <jaxws:endpoint address="/residents" implementor="#residentsWebService" id="residentsEndpoint">
        <jaxws:properties>
            <entry key="schema-validation-enabled" value="true"/>
            <entry key="ws-security.callback-handler" value-ref="serverPasswordCallback"/>
            <entry key="ws-security.ut.validator" value-ref="usernameTokenValidator"/>
        </jaxws:properties>
    </jaxws:endpoint>

    <jaxws:endpoint address="/documents" implementor="#documentsWebService" id="documentsEndpoint" >
        <jaxws:properties>
            <entry key="schema-validation-enabled" value="true"/>
            <entry key="ws-security.callback-handler" value-ref="serverPasswordCallback"/>
            <entry key="ws-security.ut.validator" value-ref="usernameTokenValidator"/>
        </jaxws:properties>
    </jaxws:endpoint>

    <jaxws:endpoint address="/documentsDownload" implementor="#documentsDownloadWebService" id="documentsDownloadEndpoint">
        <jaxws:properties>
            <entry key="schema-validation-enabled" value="true"/>
            <entry key="ws-security.callback-handler" value-ref="serverPasswordCallback"/>
            <entry key="ws-security.ut.validator" value-ref="usernameTokenValidator"/>
        </jaxws:properties>
    </jaxws:endpoint>

    <jaxws:endpoint address="/documentsUpload" implementor="#documentsUploadWebService" id="documentsUploadEndpoint">
        <jaxws:properties>
            <entry key="schema-validation-enabled" value="true"/>
            <entry key="ws-security.callback-handler" value-ref="serverPasswordCallback"/>
            <entry key="ws-security.ut.validator" value-ref="usernameTokenValidator"/>
        </jaxws:properties>
    </jaxws:endpoint>

    <bean id="serverPasswordCallback" class="com.scnsoft.eldermark.ws.server.security.ServerPasswordCallback">
        <constructor-arg name="alias" value = "${org.apache.ws.security.crypto.merlin.keystore.alias}"/>
        <constructor-arg name="privatePassword" value ="${org.apache.ws.security.crypto.merlin.keystore.private.password}"/>
    </bean>
</beans>