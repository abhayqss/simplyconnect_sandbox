#* @vtlvariable name="mobileButtons" type="java.lang.Boolean" *#
<table cellpadding="0" cellspacing="0" border="0" bgcolor="white"
       style="width:100%; background: white; color: #333333;">
    <tr>
        <td width="25"></td>
        <td>
            <h2 style="margin: 30px 0; font-size: 22px">${subject}</h2>
            #parse( "velocity/${template}")
        </td>
        <td width="25"></td>
    </tr>

    #if($mobileButtons)
        <tr>
            <td height="45" colspan="3"></td>
        </tr>

        <tr>
            <td width="25"></td>
            <td>
                #parse( "velocity/base/mobileButtons.vm")
            </td>
            <td width="25"></td>
        </tr>
    #end

    <tr>
        <td height="45" colspan="3"></td>
    </tr>

    <tr>
        <td width="25"></td>
        <td>
            <p>Best Regards,<br>
                Simply Connect Team
            </p>
        </td>
        <td width="25"></td>
    </tr>

    <tr>
        <td height="15" colspan="3"></td>
    </tr>
</table>

