          <!--class="org.springframework.jdbc.datasource.DataSourceTransactionManager">-->
        <!--<property name="dataSource" ref="rxnormDatabaseDataSource"/>-->
        <!--<qualifier value="rxnormDatabaseTransactionManager"/>-->
    <!--</bean>-->

</beans>